import numpy as np
from scipy import signal
import numpy as np
import matplotlib.pyplot as plt
import math
%matplotlib inline

# INGRESO
b = 2.5 
t=np.linspace(-b,b,1000)
x=np.zeros(len(t))
# DEFINE LOS VALORES DONDE SE DEFINE X
xmin=-1
xmax=1
# FUNCIÓN DE X
funcx=1
for i in range (len(t)):
  if t[i]>=xmin:
    if t[i]<=xmax:
      x[i]=funcx

h=np.zeros(len(t)) 
# DEFINE LOS VALORES DONDE SE DEFINE X
ymin=-1
ymax=1
# FUNCIÓN DE X
funcy=1
for i in range (len(t)):
  if t[i]>=ymin:
    if t[i]<=ymax:
      h[i]=funcy


# PROCEDIMIENTO

# Integral de Convolucion x[t]*h[t]
y = np.convolve(x,h,'same')*0.005

plt.figure(1)
plt.plot(t,x,'b', label='x(t)')
plt.title('Señal x(t)')
plt.legend()
plt.grid()

plt.figure(2)
plt.plot(t,h,'r', label='h(t)')
plt.title('Señal h(t)')
plt.legend()
plt.grid()

plt.figure(3)
plt.plot(t,y,'m', label='x(t)*h(t)')
plt.xlabel('t')
plt.title('Integral de Convolución x(t)*h(t)')
plt.legend()
plt.grid()
plt.show()
