from scipy import signal
import numpy as np
import matplotlib.pyplot as plt
import math
%matplotlib inline

N=70
nn = np.linspace(0,N,N+1)

# Desarrollo de x[n]
K=4
Omega=0.20*math.pi 
xn=np.cos(Omega*nn)

# Desarrollo de h[n]
# Retardo de la respuesta impulsional h[n]
M=5
hn=(np.exp(-0.2*(nn)))

#Desarrollamos la convolución
conv=np.convolve(xn,hn,'full')
nconv=np.linspace(0,2*len(nn),2*len(nn)-1)
# Gráfico de x[n]
plt.subplot(3,1,1)
plt.stem(nn,xn,'b')
# Gráfico de h[n]
plt.subplot(3,1,2)
plt.stem(nn,hn,'b')
# Gráfico de y[n]
plt.subplot(3,1,3)
plt.stem(nconv,conv,'b') 
plt.xlabel('Tiempo n (Seg)')
plt.ylabel('Amplitud')
plt.title('Señal discreta de salida y[n] ')
